# Pierre's .editorconfig - he keeps his code consistent! ðŸª¨

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{css,scss,sass}]
indent_style = tab
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[composer.json]
indent_style = space
indent_size = 2

[phpunit.xml]
indent_style = space
indent_size = 2
